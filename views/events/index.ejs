<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="container">
      <div class="starter-template">
        <h1><%= title %></h1>
          <%= flash %>
        <% if (events.length === 0) { %>
          No events found.
        <%} else {%>
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Sport</th>
                <th>Skill level</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
              </tr>
            </thead>
            <tbody>
              <% events.forEach(function(event, index) { %>
                <tr>
                  <th scope="row"><%= index %></th>
                  <td><%= event.sport %></td>
                  <td><%= event.skill %></td>
                  <td><a href="/events/<%= event.id %>/show" id="link"><%= new Date(event.eventDate).toDateString() %></a></td>
                  <td><%= event.eventTime %></td>
                  <td><%= event.location %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
          <% }%>
        </div>
      </div>
    <footer>
        <% include ../partials/footer %>
    </footer>
  </body>
</html>
