<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/head %>
  </head>
  <body>
    <header>
      <% include ../../partials/header %>
    </header>
    <div class="container">
      <form action="/events/<%= eventId %>/requests/new" method="post">
        <div class="form-group">
          <label for="comment">Message</label>
          <textarea class="form-control" name="comment" placeholder="Do you want to send a message?" rows="8" cols="40"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Send request!</button>
      </form>
    </div>

    <footer>
        <% include ../../partials/footer %>
    </footer>
  </body>
</html>
